      <a href="" id="logout">Logout</a>
      {{else}}
      <a href="/login">Login</a>
      <a href="" id="logout">Logout</a>
      {{/if}}
    </nav>
    <a href="/"><button><h1>Tech Blog</h1></button></a>
  </header>

  <main class="">
    <!-- Render the sub layout -->
    {{{ body }}}
  </main>

  <footer>
    <p>Created by <a target="_blank" href="https://github.com/tbgolfer86">tbgolfer86</a></p>
  </footer>
<!-- Render script for logged in users only -->
{{#if logged_in}}
<script src="/js/logout.js"></script>
{{/if}}
</body>

</html>